# usage: pkg_grep_summary <TRUE_EXPR> [<FALSE_EXPR>]
# example:
#   pkg_grep_summary \
#      '$1 == "PKGPATH" && $2 ~ /judy/' \
#      '$1 == "PKGPATH" && $2 !~ /judy/' < \
#           /srv/pkgsrc/pkg_src_summary.txt

set -e
test $# -le 2

true_condition="$1"
shift

false_condition=0
if test $# -eq 1; then
    false_condition="$1"
    shift
fi

awk '
BEGIN {
   FS     = "="
   skip   = -1 # -1 - unknown, 0 - false, 1 - true
}

function update_skip (){
   if ('"$true_condition"'){
      skip = 0

      if (skip == 0){
         print accu
      }
   }
   if ('"$false_condition"'){
      skip = 1

      if (skip == 0){
         print accu
      }
   }
}

{
   n = NF
}

skip != 1 && n > 0 {
   update_skip()
}

skip == 1 && n > 0 {
   next
}

skip == 0 && n > 0 {
   print $0
   next
}

skip == -1 {
   if (accu == "")
      accu = $0
   else
      accu = accu "\n" $0
}

NF == 0 {
   if (skip == 0){
      print ""
   }

   accu = ""
   skip = -1
}
'
