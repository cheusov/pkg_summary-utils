set -e

usage (){
    cat 1>&2 <<EOF
pkg_cleanup_distfiles - analyses ALLSRCFILES field of src_summary given
on input and removes unnecessary files and directories in DISTDIR

usage: pkg_cleanup_distfiles [OPTIONS] [files...]
OPTIONS:
  -h|--help      display this help message
  -n             do not delete, just show
EOF
}

nodelete=''
while test $# -ne 0; do
    case "$1" in
	-h|--help)
	    usage
	    exit 0;;
	-n)
	    nodelete=1;;
	--)
	    shift
	    break;;
	-*)
	    echo "Bad option $1" 1>&2
	    exit 1;;
	*)
	    break
    esac
    shift
done
