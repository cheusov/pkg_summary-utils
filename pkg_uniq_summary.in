#env "LC_ALL=C"

#use "alt_getopt.awk"
#use "abort.awk"
#use "power_getopt.awk"

############################################################
#.begin-str help
# pkg_uniq_summary - filter out repeated summaries.
#   Summaries are compared by (PKGPATH, PKGBASE, ASSIGNMENTS) triple.
# usage: pkg_uniq_summary -h
#       pkg_uniq_summary [OPTIONS] [files...]
# OPTIONS:
#   -h|--help            display this help
#.end-str
############################################################

BEGIN {
	skip       = 0
	line_count = 0
}

NF == 0 {
	if (!pkgs [pkgbase, pkgpath, assigns]++){
		for (i=0; i < line_count; ++i){
			print lines [i]
		}
		print ""
	}
	assigns = pkgbase = pkgpath = ""
	line_count = 0
	next
}

{
	lines [line_count++] = $0
}

$0 ~ /^PKGNAME=/ {
	pkgbase = substr($0, 9)
	sub(/-[^-]+$/, "", pkgbase)
	next
}

$0 ~ /^PKGPATH=/ {
	pkgpath = substr($0, 9)
	if (sub(/:.*$/, "", pkgpath)){
		assigns = substr($0, 9)
		sub(/^[^:]*:/, "", assigns)
	}
	next
}

$0 ~ /^ASSIGNMENTS=/ {
	assigns = substr($0, 13)
	next
}
