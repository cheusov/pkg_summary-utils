set -e

usage (){
    cat 1>&2 <<EOF
pkg_refresh_summary - refresh pkg_summary, that is
for each pkgpath:pkgbase pair present in summary it outputs
only summaries about newest packages.
Duplicated summaries are also removed.

usage: pkg_refresh_summary [OPTIONS] [files...]
OPTIONS:
  -h             display this help message
  -o             output summaries of all package except newest ones
EOF
}

process_args (){
    alt_getopt \
	'h help' 'usage; exit 0' \
	o        print_older=1   \
	-- "$@"
}
cmds=`process_args "$@"`
eval "$cmds"

############################################################

tmp_dir=`mktemp -d /tmp/pkg_refresh_summary.XXXXXX`
trap "rm -rf $tmp_dir $new_summary" 0 1 2 15
test -n "$tmp_dir" || exit 1

############################################################
if test $# -eq 0; then
    # copy stdin to temporary file and then use it
    tmp_fn=$tmp_dir/tmp
    cat > "$tmp_fn"
    set -- "$tmp_fn"
fi

newest_fn=$tmp_dir/newest

############################################################
find_newest (){
    runawk -e '
#use "pkgsrc-dewey.awk"

BEGIN {
   FS = "="
}

$1 == "PKGNAME" {
   pkgbase = $2
   sub(/-[^-]*$/, "", pkgbase)

   pkgver = $2
   sub(/^.*-/, "", pkgver)

   next
}

$1 == "PKGPATH" {
   pkgpath = $2
   next
}

NF == 0 && pkgpath != "" && pkgbase != "" {
   pair = pkgpath ":" pkgbase

   if (!(pair in pkgbase2ver) ||
      dewey_cmp(pkgbase2ver [pair], pkgver) == "<")
   {
      pkgbase2ver [pair] = pkgver
   }

   pkgpath = pkgbase = ""
}

END {
   for (p in pkgbase2ver){
      pathname = p
      sub(/:/, " ", pathname)

      print pathname "-" pkgbase2ver [p]
   }
}
' "$@"
}

############################################################

grep_newest_summaries (){
    runawk -v newest_fn="$newest_fn" -v print_older="$print_older" -e '
#use "xgetline.awk"
#use "pkg_grep_summary.awk"

BEGIN {
   print_older = print_older + 0
   NEWEST_PKG     = 1-print_older
   OLDER_PKG    = print_older

   FS = " "
   while (xgetline0(newest_fn)){
      pair = $1 ":" $2
      keep [pair] = 1
   }

   grep_summary__field = ""
   FS = "="

   # keep all fields in associative array "fields"
   keep_fields = 1
}

function grep_summary__condition (           pkgpath, pkgname, pair){
   pkgpath = fields ["PKGPATH"]
   if (pkgpath == "")
      return -1

   pkgname = fields ["PKGNAME"]
   if (pkgname == "")
      return -1

   pair = pkgpath ":" pkgname
   if (pair in processed){
      return 0
   }else if (pair in keep){
      processed [pair] = 1
      return NEWEST_PKG
   }

   return OLDER_PKG
}
' "$@"
}

find_newest "$@" > $newest_fn
grep_newest_summaries "$@"
